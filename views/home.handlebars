  $(document).ready(function(){
    $.ajax({
      type: "POST",
      url: "get_weekly_schedule",
      success: function(data) {
        var results = data.success;
   console.log(results);
   $("#sunday").html(results[0].sunday);
   $("#monday").html(results[0].monday);
   $("#tuesday").html(results[0].tuesday);
   $("#wednesday").html(results[0].wednesday);
   $("#thursday").html(results[0].thursday);
