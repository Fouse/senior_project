  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-8">
        <form id="lift_request" action="lift_request" method="POST">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label>Purpose of the Trip</label>
            <input type="text" class="form-control" placeholder="" name="title">
           </div>
            <div class="form-group col-md-4">
              <label >Email address</label>
              <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="" name="email" required >
            </div>
            <div class="form-group col-md-4">
              <label>Requester's Name</label>
              <input type="text" class="form-control" placeholder="" name="auth_name" required >
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label>Department</label>
            <input type="text" class="form-control" placeholder="" name="department">
           </div>
           <div class="form-group col-md-4">
            <label>Date & Time of Trip</label>
            <input type="datetime-local" data-format="dd/MM/yyyy hh:mm" class="form-control" name="start" required>
           </div>
           <div class="form-group col-md-4">
            <label>Return Date & Time</label>
            <input type="datetime-local" data-format="dd/MM/yyyy hh:mm" class="form-control" name="end" required>
           </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label>Arrival at Destination Date & Time</label>
            <input type="datetime-local" data-format="dd/MM/yyyy hh:mm" class="form-control"name="arrival_destination_dateTime" required>
          </div>
          <div class="form-group col-md-4">
            <label>Date & Time of Departure from Destination</label>
            <input type="datetime-local" data-format="dd/MM/yyyy hh:mm" class="form-control"name="destination_dep_dateTime" required>
          </div>
          <div class="form-group col-md-4">
            <label>Arrival Date & Time on Campus</label>
            <input type="datetime-local" data-format="dd/MM/yyyy hh:mm" class="form-control"name="arrival_PPU_dateTime" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label>Destination</label>
          <input type="text" class="form-control" placeholder="" name="destination">
         </div>
          <div class="form-group col-md-4">
            <label >Direction</label>
            <input type="text" class="form-control" placeholder="" name="direction">
          </div>
          <div class="form-group col-md-4">
            <label>Number of Passagers</label>
            <input type="number" class="form-control" placeholder="" name="num_passengers" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label>Hotel Name</label>
          <input type="text" class="form-control" placeholder="" name="hotel_name">
         </div>
          <div class="form-group col-md-4">
            <label >Hotel Address</label>
            <input type="text" class="form-control" placeholder="" name="hotel_address">
          </div>
          <div class="form-group col-md-4">
            <label>Hotel Direction</label>
            <input type="number" class="form-control" placeholder="" name="hotel_direction">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label>Number of Driver Needed</label>
          <input type="text" class="form-control" placeholder="" name="driver_num">
         </div>
          <div class="form-group col-md-4">
            <label >Other Comment</label>
            <input type="text" class="form-control" placeholder="" name="comment">
          </div>
          <div class="form-group col-md-4">
            <label>Budget Number</label>
            <input type="text" class="form-control" placeholder="" name="budget_num" required >
          </div>
        </div>
        <button type="submit" class="btn btn-outline-success">submit your lift request</button>
       </form>
      </div>
    </div>
  </div>
